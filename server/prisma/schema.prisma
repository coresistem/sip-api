// Prisma Schema for Sistem Integrasi Panahan (SIP)
// Database: SQLite (development) or PostgreSQL (production via Supabase)
// Set DATABASE_URL in .env to switch between databases

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Production: postgresql (Supabase)
  // For local dev, use: npm run dev:db (uses schema.dev.prisma)
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// MODELS (SQLite compatible - using String instead of enum)
// ===========================================

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  name         String
  phone        String?
  avatarUrl    String?   @map("avatar_url")
  role         String    @default("ATHLETE") // 00:SUPER_ADMIN, 01:PERPANI, 02:CLUB, 03:SCHOOL, 04:ATHLETE, 05:PARENT, 06:COACH, 07:JUDGE, 08:EO, 09:SUPPLIER, 10:MANPOWER
  isActive     Boolean   @default(true) @map("is_active")
  lastLogin    DateTime? @map("last_login")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // SIP ID & Location (from onboarding)
  sipId      String? @unique @map("sip_id") // Format: XX.XXXX.XXXX
  whatsapp   String? // WhatsApp number
  provinceId String? @map("province_id") // Province code (KTP/KK)
  cityId     String? @map("city_id") // City code (KTP/KK)

  // Athlete-specific fields
  nik            String? // NIK (16 digit)
  nikVerified    Boolean @default(false) @map("nik_verified") // Verified by Admin
  nikDocumentUrl String? @map("nik_document_url") // KTP upload path

  // Multi-Role Support
  roles        String? // JSON array: ["ATHLETE", "COACH"]
  sipIds       String? // JSON map: {"ATHLETE":"04-3273-0001","COACH":"06-3273-0042"}
  roleStatuses String? @map("role_statuses") // JSON map: {"ATHLETE":"Active","COACH":"Pending"}
  activeRole   String? @map("active_role") // Currently selected role for multi-role users

  isStudent Boolean @default(false) @map("is_student") // Student toggle

  // Relations
  clubId String? @map("club_id")
  club   Club?   @relation("ClubMembers", fields: [clubId], references: [id])

  ownedClubs         Club[]              @relation("ClubOwner")
  ownedSchools       School[]            @relation("SchoolOwner")
  athlete            Athlete?            @relation("AthleteUser")
  coach              Coach?              @relation("CoachUser")
  parentOf           Athlete[]           @relation("ParentAthlete")
  coachSessions      ScoringRecord[]     @relation("CoachScores")
  attendances        Attendance[]
  verifiedPayments   MembershipFee[]     @relation("PaymentVerifier")
  refreshTokens      RefreshToken[]
  studentEnrollments StudentEnrollment[]
  joinRequests       ClubJoinRequest[]
  dailyLogs          DailyLog[]
  roleRequests       RoleRequest[]

  @@index([email])
  @@index([clubId])
  @@index([sipId])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("refresh_tokens")
}

model Club {
  id                 String   @id @default(cuid())
  sipId              String?  @unique @map("sip_id") // Format: 02.XXXX.XXXX
  name               String
  registrationNumber String?  @unique @map("registration_number")
  address            String?
  city               String?
  province           String?
  postalCode         String?  @map("postal_code")
  phone              String?
  email              String?
  website            String?
  logoUrl            String?  @map("logo_url")
  description        String?
  status             String   @default("ACTIVE") // ACTIVE, INACTIVE, SUSPENDED
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  // Additional Club Info
  whatsappHotline String? @map("whatsapp_hotline")
  instagram       String?

  // Perpani Membership
  isPerpaniMember Boolean  @default(false) @map("is_perpani_member")
  skPerpaniNo     String?  @map("sk_perpani_no")
  skPerpaniDocId  String?  @map("sk_perpani_doc_id") // Link to file manager
  perpaniId       String?  @map("perpani_id") // Link to Perpani record
  perpani         Perpani? @relation(fields: [perpaniId], references: [id])

  // Owner relation
  ownerId String @map("owner_id")
  owner   User   @relation("ClubOwner", fields: [ownerId], references: [id])

  // Members
  members         User[]             @relation("ClubMembers")
  athletes        Athlete[]
  schedules       TrainingSchedule[]
  assets          AssetInventory[]
  documents       Document[]
  organization    ClubOrganization[]
  joinRequests    ClubJoinRequest[]
  assetCategories AssetCategory[]

  @@index([ownerId])
  @@index([perpaniId])
  @@map("clubs")
}

model Athlete {
  id String @id @default(cuid())

  // User account link
  userId String @unique @map("user_id")
  user   User   @relation("AthleteUser", fields: [userId], references: [id], onDelete: Cascade)

  // Parent link
  parentId String? @map("parent_id")
  parent   User?   @relation("ParentAthlete", fields: [parentId], references: [id])

  // Club link
  clubId String? @map("club_id")
  club   Club?   @relation(fields: [clubId], references: [id])

  // Personal info
  dateOfBirth    DateTime @map("date_of_birth")
  gender         String // MALE, FEMALE
  nationality    String?
  parentLinkCode String?  @unique @map("parent_link_code")

  // Archery specific
  archeryCategory  String  @map("archery_category") // RECURVE, COMPOUND, BAREBOW, TRADITIONAL, LONGBOW
  division         String? // Barebow, Nasional, Recurve, Compound, Traditional
  skillLevel       String  @default("BEGINNER") @map("skill_level") // BEGINNER, INTERMEDIATE, ADVANCED, ELITE
  underAgeCategory String? @map("under_age_category") // U10, U13, U15, U18, U21, Senior, Master
  dominantHand     String? @map("dominant_hand")
  dominantEye      String? @map("dominant_eye")

  // Physical measurements
  height     Float?
  weight     Float?
  armSpan    Float? @map("arm_span")
  drawLength Float? @map("draw_length")

  // Equipment specifications
  bowBrand      String? @map("bow_brand")
  bowModel      String? @map("bow_model")
  bowDrawWeight Float?  @map("bow_draw_weight")
  arrowBrand    String? @map("arrow_brand")
  arrowSpine    String? @map("arrow_spine")

  // ID card & registration
  athleteIdNumber  String?  @unique @map("athlete_id_number")
  registrationDate DateTime @default(now()) @map("registration_date")

  emergencyContact String? @map("emergency_contact")
  emergencyPhone   String? @map("emergency_phone")
  medicalNotes     String? @map("medical_notes")

  // Gamification
  xp    Int @default(0)
  level Int @default(1)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  scores                   ScoringRecord[]
  fees                     MembershipFee[]
  scheduleParticipations   ScheduleParticipant[]
  assessments              AssessmentRecord[]
  badges                   AthleteBadge[]
  competitionRegistrations CompetitionRegistration[]
  certificates             Certificate[]

  @@index([clubId])
  @@index([parentId])
  @@map("athletes")
}

model ScoringRecord {
  id String @id @default(cuid())

  // Relations
  athleteId String  @map("athlete_id")
  athlete   Athlete @relation(fields: [athleteId], references: [id], onDelete: Cascade)

  coachId String? @map("coach_id")
  coach   User?   @relation("CoachScores", fields: [coachId], references: [id])

  scheduleId String?           @map("schedule_id")
  schedule   TrainingSchedule? @relation(fields: [scheduleId], references: [id])

  // Session info
  sessionDate DateTime @map("session_date")
  sessionType String   @default("TRAINING") @map("session_type") // TRAINING, COMPETITION, ASSESSMENT
  distance    Int
  targetFace  String?  @map("target_face")

  // Scores - stored as JSON string for SQLite compatibility
  arrowScores String @map("arrow_scores") // JSON string: "[[10,9,8], [10,10,9], ...]"
  totalSum    Int    @map("total_sum")
  arrowCount  Int    @map("arrow_count")
  average     Float  @default(0)

  // Additional metrics
  tensCount Int @default(0) @map("tens_count")
  xCount    Int @default(0) @map("x_count")

  // Notes and conditions
  notes            String?
  weatherCondition String? @map("weather_condition")

  isVerified Boolean  @default(false) @map("is_verified")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([athleteId])
  @@index([coachId])
  @@index([sessionDate])
  @@map("scoring_records")
}

model MembershipFee {
  id String @id @default(cuid())

  athleteId String?  @map("athlete_id")
  athlete   Athlete? @relation(fields: [athleteId], references: [id], onDelete: Cascade)

  // Billing info
  description   String
  amount        Float
  currency      String   @default("IDR")
  billingPeriod String   @map("billing_period")
  dueDate       DateTime @map("due_date")

  // Issuer info (Club or EO)
  issuerId    String? @map("issuer_id") // Club ID or User ID (EO)
  issuerType  String? @default("CLUB") @map("issuer_type") // CLUB, EO, PERPANI
  recipientId String? @map("recipient_id") // User ID if not athlete specific

  // Payment info
  status          String    @default("PENDING") // PENDING, PAID, VERIFIED, OVERDUE, CANCELLED
  paymentProofUrl String?   @map("payment_proof_url")
  transactionDate DateTime? @map("transaction_date")
  paymentMethod   String?   @map("payment_method")
  transactionRef  String?   @map("transaction_ref")

  // Verification
  verifiedBy      String?   @map("verified_by")
  verifier        User?     @relation("PaymentVerifier", fields: [verifiedBy], references: [id])
  verifiedAt      DateTime? @map("verified_at")
  rejectionReason String?   @map("rejection_reason")

  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([athleteId])
  @@index([recipientId])
  @@index([issuerId])
  @@index([status])
  @@index([billingPeriod])
  @@map("membership_fees")
}

model InvoiceTemplate {
  id String @id @default(cuid())

  ownerId     String  @map("owner_id") // Club ID or User ID
  name        String
  description String?
  amount      Float
  items       String? // JSON array of items

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([ownerId])
  @@map("invoice_templates")
}

model TrainingSchedule {
  id String @id @default(cuid())

  clubId String @map("club_id")
  club   Club   @relation(fields: [clubId], references: [id])

  // Schedule info
  title       String
  description String?
  startTime   DateTime @map("start_time")
  endTime     DateTime @map("end_time")
  venue       String?

  // Capacity
  maxParticipants Int? @map("max_participants")

  // Category filter
  targetCategory   String? @map("target_category") // RECURVE, COMPOUND, etc.
  targetSkillLevel String? @map("target_skill_level") // BEGINNER, etc.

  status           String  @default("SCHEDULED") // SCHEDULED, IN_PROGRESS, COMPLETED, CANCELLED
  isRecurring      Boolean @default(false) @map("is_recurring")
  recurringPattern String? @map("recurring_pattern")

  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  participants ScheduleParticipant[]
  attendances  Attendance[]
  scores       ScoringRecord[]

  @@index([clubId])
  @@index([startTime])
  @@map("training_schedules")
}

model ScheduleParticipant {
  id String @id @default(cuid())

  scheduleId String           @map("schedule_id")
  schedule   TrainingSchedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  athleteId String  @map("athlete_id")
  athlete   Athlete @relation(fields: [athleteId], references: [id], onDelete: Cascade)

  registeredAt DateTime @default(now()) @map("registered_at")

  @@unique([scheduleId, athleteId])
  @@map("schedule_participants")
}

model AssetInventory {
  id String @id @default(cuid())

  clubId String @map("club_id")
  club   Club   @relation(fields: [clubId], references: [id])

  // Item info
  itemName     String  @map("item_name")
  category     String
  brand        String?
  model        String?
  quantity     Int     @default(1)
  serialNumber String? @map("serial_number")

  // Status & condition
  status         String  @default("AVAILABLE") // AVAILABLE, IN_USE, MAINTENANCE, RETIRED
  condition      String  @default("GOOD") // EXCELLENT, GOOD, FAIR, POOR
  conditionNotes String? @map("condition_notes")

  // Purchase info
  purchaseDate   DateTime? @map("purchase_date")
  purchasePrice  Float?    @map("purchase_price")
  supplier       String?
  warrantyExpiry DateTime? @map("warranty_expiry")

  // Maintenance
  lastMaintenanceDate DateTime? @map("last_maintenance_date")
  nextMaintenanceDate DateTime? @map("next_maintenance_date")
  maintenanceCycle    Int?      @map("maintenance_cycle")

  // Location & assignment
  storageLocation String? @map("storage_location")
  assignedTo      String? @map("assigned_to")

  imageUrl  String?  @map("image_url")
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  maintenanceLogs AssetMaintenanceLog[]

  @@index([clubId])
  @@index([status])
  @@map("asset_inventory")
}

model AssetCategory {
  id     String @id @default(cuid())
  clubId String @map("club_id")
  club   Club   @relation(fields: [clubId], references: [id])
  name   String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([clubId, name])
  @@map("asset_categories")
}

model AssetMaintenanceLog {
  id String @id @default(cuid())

  assetId String         @map("asset_id")
  asset   AssetInventory @relation(fields: [assetId], references: [id], onDelete: Cascade)

  maintenanceDate DateTime @map("maintenance_date")
  description     String
  performedBy     String   @map("performed_by")
  cost            Float?

  conditionBefore String @map("condition_before") // EXCELLENT, GOOD, FAIR, POOR
  conditionAfter  String @map("condition_after")

  notes     String?
  createdAt DateTime @default(now()) @map("created_at")

  @@index([assetId])
  @@map("asset_maintenance_logs")
}

model Attendance {
  id String @id @default(cuid())

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  scheduleId String           @map("schedule_id")
  schedule   TrainingSchedule @relation(fields: [scheduleId], references: [id])

  checkInTime  DateTime  @map("check_in_time")
  checkOutTime DateTime? @map("check_out_time")

  status String @default("PRESENT") // PRESENT, LATE, ABSENT, EXCUSED
  method String @default("QR_SCAN") // QR_SCAN, MANUAL, GEOLOCATION

  // Location verification
  latitude         Float?
  longitude        Float?
  locationAccuracy Float? @map("location_accuracy")

  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, scheduleId])
  @@index([userId])
  @@index([scheduleId])
  @@map("attendances")
}

model GeneralDocument {
  id    String @id @default(cuid())
  sipId String @map("sip_id") // Links to any entity with a SIP ID

  title       String
  description String?
  category    String // "CERTIFICATE", "MEDICAL", "ID_CARD", "OTHER"
  fileUrl     String  @map("file_url")
  fileType    String  @map("file_type") // "application/pdf", "image/jpeg", etc.
  fileSize    Int     @map("file_size") // in bytes

  uploadedBy   String  @map("uploaded_by") // Name of uploader
  uploadedById String? @map("uploaded_by_id") // User ID of uploader

  isPublic   Boolean   @default(false) @map("is_public")
  expiryDate DateTime? @map("expiry_date")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([sipId])
  @@index([category])
  @@map("general_documents")
}

model Document {
  id String @id @default(cuid())

  clubId String @map("club_id")
  club   Club   @relation(fields: [clubId], references: [id])

  title       String
  description String?
  category    String
  fileUrl     String  @map("file_url")
  fileType    String  @map("file_type")
  fileSize    Int     @map("file_size")

  uploadedBy String  @map("uploaded_by")
  isPublic   Boolean @default(false) @map("is_public")

  expiryDate DateTime? @map("expiry_date")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([clubId])
  @@index([category])
  @@map("documents")
}

model Notification {
  id String @id @default(cuid())

  userId String @map("user_id")

  title   String
  message String
  type    String // info, warning, success, alert
  link    String?

  isRead Boolean   @default(false) @map("is_read")
  readAt DateTime? @map("read_at")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([isRead])
  @@map("notifications")
}

model AuditLog {
  id String @id @default(cuid())

  userId   String  @map("user_id")
  action   String
  entity   String
  entityId String? @map("entity_id")

  oldValues String? @map("old_values") // JSON string
  newValues String? @map("new_values") // JSON string

  ipAddress String? @map("ip_address")
  userAgent String? @map("user_agent")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([entity])
  @@index([createdAt])
  @@map("audit_logs")
}

model EquipmentConfigLog {
  id String @id @default(cuid())

  userId String @map("user_id")

  // Session settings
  arrowsPerEnd Int     @map("arrows_per_end")
  division     String?
  targetFace   String? @map("target_face")
  distance     Int?

  // Archer Config
  drawLength Float @map("draw_length") // inch
  drawWeight Float @map("draw_weight") // lbs

  // Bow Setting
  bowHeight     String? @map("bow_height") // 64"/66"/68"/70"/72"
  braceHeight   Float?  @map("brace_height") // inch
  aTiller       Float?  @map("a_tiller") // mm
  bTiller       Float?  @map("b_tiller") // mm
  diffTiller    Float?  @map("diff_tiller") // mm (calculated)
  tillerStatus  String? @map("tiller_status") // Positive/Neutral/Negative
  nockingPoint  Float?  @map("nocking_point") // mm
  nockingStatus String? @map("nocking_status") // Positive/Neutral/Negative

  // Arrow Setting
  arrowPoint  Float? @map("arrow_point") // grain
  arrowLength Float? @map("arrow_length") // inch

  // Performance metrics at time of config
  avgScoreArrow   Float? @map("avg_score_arrow") // Average score per arrow
  totalScore      Int?   @map("total_score")
  totalArrows     Int?   @map("total_arrows")
  indexArrowScore Float? @map("index_arrow_score") // Total / arrowsPerEnd

  notes     String?
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([createdAt])
  @@map("equipment_config_logs")
}

// ===========================================
// NEW MODELS FOR ROLE-SPECIFIC PROFILES
// ===========================================

model Perpani {
  id         String   @id @default(cuid())
  sipId      String   @unique @map("sip_id") // Format: 01.XXXX.XXXX
  name       String
  provinceId String   @map("province_id")
  cityId     String   @map("city_id")
  address    String?
  phone      String?
  email      String?
  website    String?
  status     String   @default("NO_OPERATOR") // NO_OPERATOR, ACTIVE
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  clubs Club[]

  @@index([provinceId])
  @@index([cityId])
  @@map("perpani")
}

model Coach {
  id     String @id @default(cuid())
  userId String @unique @map("user_id")
  user   User   @relation("CoachUser", fields: [userId], references: [id], onDelete: Cascade)

  // Experience & Bio
  bio             String?
  yearsExperience Int?    @map("years_experience")

  // Certification
  certificateUrl   String? @map("certificate_url")
  certificateLevel String? @map("certificate_level") // "NATIONAL_LEVEL_1", etc.

  // Verification Status
  verificationStatus String    @default("UNVERIFIED") @map("verification_status") // UNVERIFIED, PENDING, VERIFIED, REJECTED
  verifiedAt         DateTime? @map("verified_at")
  verifiedBy         String?   @map("verified_by") // Perpani Admin User ID who verified
  rejectionReason    String?   @map("rejection_reason")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([verificationStatus])
  @@map("coaches")
}

model School {
  id         String   @id @default(cuid())
  sipId      String   @unique @map("sip_id") // Format: 03.XXXX.XXXX
  npsn       String?  @unique // National School ID from Kemendikdasmen
  name       String
  provinceId String   @map("province_id")
  cityId     String   @map("city_id")
  address    String?
  website    String? // Link to school data
  sourceUrl  String?  @map("source_url") // https://sekolah.data.kemendikdasmen.go.id/sekolah
  status     String   @default("NO_OPERATOR") // NO_OPERATOR, ACTIVE
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  students StudentEnrollment[]

  ownerId String? @map("owner_id")
  owner   User?   @relation("SchoolOwner", fields: [ownerId], references: [id])

  @@index([provinceId])
  @@index([cityId])
  @@index([npsn])
  @@index([ownerId])
  @@map("schools")
}

model StudentEnrollment {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  schoolId     String    @map("school_id")
  nisn         String? // Nomor Induk Siswa Nasional
  currentClass String?   @map("current_class") // Current grade/class
  joinDate     DateTime  @default(now()) @map("join_date")
  leaveDate    DateTime? @map("leave_date")
  status       String    @default("ACTIVE") // ACTIVE, GRADUATED, TRANSFERRED
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  school School @relation(fields: [schoolId], references: [id])

  @@unique([userId, schoolId])
  @@index([userId])
  @@index([schoolId])
  @@map("student_enrollments")
}

model ClubOrganization {
  id          String    @id @default(cuid())
  clubId      String    @map("club_id")
  position    String // CHAIRPERSON, SECRETARY, TREASURER, HEAD_COACH, CUSTOM
  customTitle String?   @map("custom_title") // For custom positions
  name        String
  whatsapp    String?
  email       String?
  termStart   DateTime? @map("term_start")
  termEnd     DateTime? @map("term_end")
  isActive    Boolean   @default(true) @map("is_active")
  sortOrder   Int       @default(0) @map("sort_order")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  club Club @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@map("club_organizations")
}

model DailyLog {
  id     String   @id @default(cuid())
  userId String   @map("user_id")
  date   DateTime @default(now())

  // Load Metrics
  rpe             Int // 1-10 Rate of Perceived Exertion
  durationMinutes Int @map("duration_minutes")

  // Volume Metrics
  arrowCount Int @default(0) @map("arrow_count")

  // Wellness Metrics (Optional)
  sleepQuality  Int?    @map("sleep_quality") // 1-5
  fatigueLevel  Int?    @map("fatigue_level") // 1-5
  stressLevel   Int?    @map("stress_level") // 1-5
