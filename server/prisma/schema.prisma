generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                     @id @default(cuid())
  email                 String                     @unique
  passwordHash          String                     @map("password_hash")
  name                  String
  phone                 String?
  avatarUrl             String?                    @map("avatar_url")
  role                  String                     @default("ATHLETE")
  isActive              Boolean                    @default(true) @map("is_active")
  lastLogin             DateTime?                  @map("last_login")
  createdAt             DateTime                   @default(now()) @map("created_at")
  updatedAt             DateTime                   @updatedAt @map("updated_at")
  coreId                String?                    @unique @map("core_id")
  whatsapp              String?
  provinceId            String?                    @map("province_id")
  cityId                String?                    @map("city_id")
  nik                   String?
  nikVerified           Boolean                    @default(false) @map("nik_verified")
  nikDocumentUrl        String?                    @map("nik_document_url")
  roles                 String?
  coreIds               String?                    @map("core_ids")
  roleStatuses          String?                    @map("role_statuses")
  activeRole            String?                    @map("active_role")
  isStudent             Boolean                    @default(false) @map("is_student")
  clubId                String?                    @map("club_id")
  dateOfBirth           DateTime?                  @map("date_of_birth")
  gender                String?
  parentOf              Athlete[]                  @relation("ParentAthlete")
  athlete               Athlete?                   @relation("AthleteUser")
  attendances           Attendance[]
  auditLogs             AuditLog[]
  cart                  Cart?
  joinRequests          ClubJoinRequest[]
  organizationRoles     ClubOrganization[]
  ownedClubs            Club[]                     @relation("ClubOwner")
  coach                 Coach?                     @relation("CoachUser")
  organizedCompetitions Competition[]              @relation("CompetitionOrganizer")
  dailyLogs             DailyLog[]
  integrationRequests   EntityIntegrationRequest[]
  jerseyOrders          JerseyOrder[]
  manpower              Manpower?
  verifiedPayments      MembershipFee[]            @relation("PaymentVerifier")
  notifications         Notification[]
  orders                Order[]
  refreshTokens         RefreshToken[]
  roleRequests          RoleRequest[]
  ownedSchools          School[]                   @relation("SchoolOwner")
  coachSessions         ScoringRecord[]            @relation("CoachScores")
  studentEnrollments    StudentEnrollment[]
  club                  Club?                      @relation("ClubMembers", fields: [clubId], references: [id])

  @@index([email])
  @@index([clubId])
  @@index([coreId])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

model Club {
  id                 String             @id @default(cuid())
  coreId             String?            @unique @map("core_id")
  name               String
  registrationNumber String?            @unique @map("registration_number")
  address            String?
  city               String?
  province           String?
  postalCode         String?            @map("postal_code")
  phone              String?
  email              String?
  website            String?
  logoUrl            String?            @map("logo_url")
  description        String?
  status             String             @default("ACTIVE")
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")
  whatsappHotline    String?            @map("whatsapp_hotline")
  instagram          String?
  isPerpaniMember    Boolean            @default(false) @map("is_perpani_member")
  skPerpaniNo        String?            @map("sk_perpani_no")
  skPerpaniDocId     String?            @map("sk_perpani_doc_id")
  perpaniId          String?            @map("perpani_id")
  ownerId            String             @map("owner_id")
  assetCategories    AssetCategory[]
  assets             AssetInventory[]
  athletes           Athlete[]
  joinRequests       ClubJoinRequest[]
  organization       ClubOrganization[]
  units              ClubUnit[]
  owner              User               @relation("ClubOwner", fields: [ownerId], references: [id])
  perpani            Perpani?           @relation(fields: [perpaniId], references: [id])
  documents          Document[]
  schedules          TrainingSchedule[]
  members            User[]             @relation("ClubMembers")

  @@index([ownerId])
  @@index([perpaniId])
  @@map("clubs")
}

model Athlete {
  id                       String                    @id @default(cuid())
  userId                   String                    @unique @map("user_id")
  parentId                 String?                   @map("parent_id")
  clubId                   String?                   @map("club_id")
  unitId                   String?                   @map("unit_id")
  nationality              String?
  parentLinkCode           String?                   @unique @map("parent_link_code")
  archeryCategory          String                    @map("archery_category")
  division                 String?
  skillLevel               String                    @default("BEGINNER") @map("skill_level")
  underAgeCategory         String?                   @map("under_age_category")
  dominantHand             String?                   @map("dominant_hand")
  dominantEye              String?                   @map("dominant_eye")
  height                   Float?
  weight                   Float?
  armSpan                  Float?                    @map("arm_span")
  drawLength               Float?                    @map("draw_length")
  bowBrand                 String?                   @map("bow_brand")
  bowModel                 String?                   @map("bow_model")
  bowDrawWeight            Float?                    @map("bow_draw_weight")
  arrowBrand               String?                   @map("arrow_brand")
  arrowSpine               String?                   @map("arrow_spine")
  athleteIdNumber          String?                   @unique @map("athlete_id_number")
  registrationDate         DateTime                  @default(now()) @map("registration_date")
  emergencyContact         String?                   @map("emergency_contact")
  emergencyPhone           String?                   @map("emergency_phone")
  medicalNotes             String?                   @map("medical_notes")
  xp                       Int                       @default(0)
  level                    Int                       @default(1)
  createdAt                DateTime                  @default(now()) @map("created_at")
  updatedAt                DateTime                  @updatedAt @map("updated_at")
  assessments              AssessmentRecord[]
  badges                   AthleteBadge[]
  unit                     ClubUnit?                 @relation(fields: [unitId], references: [id])
  club                     Club?                     @relation(fields: [clubId], references: [id])
  parent                   User?                     @relation("ParentAthlete", fields: [parentId], references: [id])
  user                     User                      @relation("AthleteUser", fields: [userId], references: [id], onDelete: Cascade)
  certificates             Certificate[]
  competitionRegistrations CompetitionRegistration[]
  fees                     MembershipFee[]
  scheduleParticipations   ScheduleParticipant[]
  scores                   ScoringRecord[]

  @@index([clubId])
  @@index([parentId])
  @@map("athletes")
}

model ScoringRecord {
  id               String            @id @default(cuid())
  athleteId        String            @map("athlete_id")
  coachId          String?           @map("coach_id")
  scheduleId       String?           @map("schedule_id")
  sessionDate      DateTime          @map("session_date")
  sessionType      String            @default("TRAINING") @map("session_type")
  distance         Int
  targetFace       String?           @map("target_face")
  arrowScores      String            @map("arrow_scores")
  totalSum         Int               @map("total_sum")
  arrowCount       Int               @map("arrow_count")
  average          Float             @default(0)
  tensCount        Int               @default(0) @map("tens_count")
  xCount           Int               @default(0) @map("x_count")
  notes            String?
  weatherCondition String?           @map("weather_condition")
  isVerified       Boolean           @default(false) @map("is_verified")
  createdAt        DateTime          @default(now()) @map("created_at")
  updatedAt        DateTime          @updatedAt @map("updated_at")
  schedule         TrainingSchedule? @relation(fields: [scheduleId], references: [id])
  coach            User?             @relation("CoachScores", fields: [coachId], references: [id])
  athlete          Athlete           @relation(fields: [athleteId], references: [id], onDelete: Cascade)

  @@index([athleteId])
  @@index([coachId])
  @@index([sessionDate])
  @@map("scoring_records")
}

model MembershipFee {
  id              String    @id @default(cuid())
  athleteId       String?   @map("athlete_id")
  description     String
  amount          Float
  currency        String    @default("IDR")
  billingPeriod   String    @map("billing_period")
  dueDate         DateTime  @map("due_date")
  issuerId        String?   @map("issuer_id")
  issuerType      String?   @default("CLUB") @map("issuer_type")
  recipientId     String?   @map("recipient_id")
  status          String    @default("PENDING")
  paymentProofUrl String?   @map("payment_proof_url")
  transactionDate DateTime? @map("transaction_date")
  paymentMethod   String?   @map("payment_method")
  transactionRef  String?   @map("transaction_ref")
  verifiedBy      String?   @map("verified_by")
  verifiedAt      DateTime? @map("verified_at")
  rejectionReason String?   @map("rejection_reason")
  notes           String?
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  verifier        User?     @relation("PaymentVerifier", fields: [verifiedBy], references: [id])
  athlete         Athlete?  @relation(fields: [athleteId], references: [id], onDelete: Cascade)

  @@index([athleteId])
  @@index([recipientId])
  @@index([issuerId])
  @@index([status])
  @@index([billingPeriod])
  @@map("membership_fees")
}

model InvoiceTemplate {
  id          String   @id @default(cuid())
  ownerId     String   @map("owner_id")
  name        String
  description String?
  amount      Float
  items       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([ownerId])
  @@map("invoice_templates")
}

model TrainingSchedule {
  id               String                @id @default(cuid())
  clubId           String                @map("club_id")
  unitId           String?               @map("unit_id")
  title            String
  description      String?
  startTime        DateTime              @map("start_time")
  endTime          DateTime              @map("end_time")
  venue            String?
  maxParticipants  Int?                  @map("max_participants")
  targetCategory   String?               @map("target_category")
  targetSkillLevel String?               @map("target_skill_level")
  status           String                @default("SCHEDULED")
  isRecurring      Boolean               @default(false) @map("is_recurring")
  recurringPattern String?               @map("recurring_pattern")
  notes            String?
  createdAt        DateTime              @default(now()) @map("created_at")
  updatedAt        DateTime              @updatedAt @map("updated_at")
  attendances      Attendance[]
  participants     ScheduleParticipant[]
  scores           ScoringRecord[]
  unit             ClubUnit?             @relation(fields: [unitId], references: [id])
  club             Club                  @relation(fields: [clubId], references: [id])

  @@index([clubId])
  @@index([startTime])
  @@map("training_schedules")
}

model ScheduleParticipant {
  id           String           @id @default(cuid())
  scheduleId   String           @map("schedule_id")
  athleteId    String           @map("athlete_id")
  registeredAt DateTime         @default(now()) @map("registered_at")
  athlete      Athlete          @relation(fields: [athleteId], references: [id], onDelete: Cascade)
  schedule     TrainingSchedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  @@unique([scheduleId, athleteId])
  @@map("schedule_participants")
}

model AssetInventory {
  id                  String                @id @default(cuid())
  clubId              String                @map("club_id")
  itemName            String                @map("item_name")
  category            String
  brand               String?
  model               String?
  quantity            Int                   @default(1)
  serialNumber        String?               @map("serial_number")
  status              String                @default("AVAILABLE")
  condition           String                @default("GOOD")
  conditionNotes      String?               @map("condition_notes")
  purchaseDate        DateTime?             @map("purchase_date")
  purchasePrice       Float?                @map("purchase_price")
  supplier            String?
  warrantyExpiry      DateTime?             @map("warranty_expiry")
  lastMaintenanceDate DateTime?             @map("last_maintenance_date")
  nextMaintenanceDate DateTime?             @map("next_maintenance_date")
  maintenanceCycle    Int?                  @map("maintenance_cycle")
  storageLocation     String?               @map("storage_location")
  assignedTo          String?               @map("assigned_to")
  imageUrl            String?               @map("image_url")
  notes               String?
  createdAt           DateTime              @default(now()) @map("created_at")
  updatedAt           DateTime              @updatedAt @map("updated_at")
  club                Club                  @relation(fields: [clubId], references: [id])
  maintenanceLogs     AssetMaintenanceLog[]

  @@index([clubId])
  @@index([status])
  @@map("asset_inventory")
}

model AssetCategory {
  id        String   @id @default(cuid())
  clubId    String   @map("club_id")
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  club      Club     @relation(fields: [clubId], references: [id])

  @@unique([clubId, name])
  @@map("asset_categories")
}

model AssetMaintenanceLog {
  id              String         @id @default(cuid())
  assetId         String         @map("asset_id")
  maintenanceDate DateTime       @map("maintenance_date")
  description     String
  performedBy     String         @map("performed_by")
  cost            Float?
  conditionBefore String         @map("condition_before")
  conditionAfter  String         @map("condition_after")
  notes           String?
  createdAt       DateTime       @default(now()) @map("created_at")
  asset           AssetInventory @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@index([assetId])
  @@map("asset_maintenance_logs")
}

model Attendance {
  id               String           @id @default(cuid())
  userId           String           @map("user_id")
  scheduleId       String           @map("schedule_id")
  checkInTime      DateTime         @map("check_in_time")
  checkOutTime     DateTime?        @map("check_out_time")
  status           String           @default("PRESENT")
  method           String           @default("QR_SCAN")
  latitude         Float?
  longitude        Float?
  locationAccuracy Float?           @map("location_accuracy")
  notes            String?
  createdAt        DateTime         @default(now()) @map("created_at")
  updatedAt        DateTime         @updatedAt @map("updated_at")
  schedule         TrainingSchedule @relation(fields: [scheduleId], references: [id])
  user             User             @relation(fields: [userId], references: [id])

  @@unique([userId, scheduleId])
  @@index([userId])
  @@index([scheduleId])
  @@map("attendances")
}

model GeneralDocument {
  id           String    @id @default(cuid())
  coreId       String    @map("core_id")
  title        String
  description  String?
  category     String
  fileUrl      String    @map("file_url")
  fileType     String    @map("file_type")
  fileSize     Int       @map("file_size")
  uploadedBy   String    @map("uploaded_by")
  uploadedById String?   @map("uploaded_by_id")
  isPublic     Boolean   @default(false) @map("is_public")
  expiryDate   DateTime? @map("expiry_date")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@index([coreId])
  @@index([category])
  @@map("general_documents")
}

model Document {
  id          String    @id @default(cuid())
  clubId      String    @map("club_id")
  title       String
  description String?
  category    String
  fileUrl     String    @map("file_url")
  fileType    String    @map("file_type")
  fileSize    Int       @map("file_size")
  uploadedBy  String    @map("uploaded_by")
  isPublic    Boolean   @default(false) @map("is_public")
  expiryDate  DateTime? @map("expiry_date")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  club        Club      @relation(fields: [clubId], references: [id])

  @@index([clubId])
  @@index([category])
  @@map("documents")
}

model Notification {
  id            String    @id @default(cuid())
  userId        String    @map("user_id")
  title         String
  message       String
  type          String
  link          String?
  isRead        Boolean   @default(false) @map("is_read")
  readAt        DateTime? @map("read_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  actionPayload String?   @map("action_payload")
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@map("notifications")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  action    String
  entity    String
  entityId  String?  @map("entity_id")
  oldValues String?  @map("old_values")
  newValues String?  @map("new_values")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")
  metadata  String?  @map("metadata")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entity])
  @@index([createdAt])
  @@map("audit_logs")
}

model EquipmentConfigLog {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  arrowsPerEnd    Int      @map("arrows_per_end")
  division        String?
  targetFace      String?  @map("target_face")
  distance        Int?
  drawLength      Float    @map("draw_length")
  drawWeight      Float    @map("draw_weight")
  bowHeight       String?  @map("bow_height")
  braceHeight     Float?   @map("brace_height")
  aTiller         Float?   @map("a_tiller")
  bTiller         Float?   @map("b_tiller")
  diffTiller      Float?   @map("diff_tiller")
  tillerStatus    String?  @map("tiller_status")
  nockingPoint    Float?   @map("nocking_point")
  nockingStatus   String?  @map("nocking_status")
  arrowPoint      Float?   @map("arrow_point")
  arrowLength     Float?   @map("arrow_length")
  avgScoreArrow   Float?   @map("avg_score_arrow")
  totalScore      Int?     @map("total_score")
  totalArrows     Int?     @map("total_arrows")
  indexArrowScore Float?   @map("index_arrow_score")
  notes           String?
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([createdAt])
  @@map("equipment_config_logs")
}

model Perpani {
  id         String   @id @default(cuid())
  coreId     String   @unique @map("core_id")
  name       String
  provinceId String   @map("province_id")
  cityId     String   @map("city_id")
  address    String?
  phone      String?
  email      String?
  website    String?
  status     String   @default("NO_OPERATOR")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  clubs      Club[]

  @@index([provinceId])
  @@index([cityId])
  @@map("perpani")
}

model Coach {
  id                 String    @id @default(cuid())
  userId             String    @unique @map("user_id")
  bio                String?
  yearsExperience    Int?      @map("years_experience")
  certificateUrl     String?   @map("certificate_url")
  certificateLevel   String?   @map("certificate_level")
  verificationStatus String    @default("UNVERIFIED") @map("verification_status")
  verifiedAt         DateTime? @map("verified_at")
  verifiedBy         String?   @map("verified_by")
  rejectionReason    String?   @map("rejection_reason")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  user               User      @relation("CoachUser", fields: [userId], references: [id], onDelete: Cascade)

  @@index([verificationStatus])
  @@map("coaches")
}

model School {
  id         String              @id @default(cuid())
  coreId     String              @unique @map("core_id")
  npsn       String?             @unique
  name       String
  provinceId String              @map("province_id")
  cityId     String              @map("city_id")
  address    String?
  website    String?
  sourceUrl  String?             @map("source_url")
  status     String              @default("NO_OPERATOR")
  createdAt  DateTime            @default(now()) @map("created_at")
  updatedAt  DateTime            @updatedAt @map("updated_at")
  ownerId    String?             @map("owner_id")
  owner      User?               @relation("SchoolOwner", fields: [ownerId], references: [id])
  students   StudentEnrollment[]

  @@index([provinceId])
  @@index([cityId])
  @@index([npsn])
  @@index([ownerId])
  @@map("schools")
}

model StudentEnrollment {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  schoolId     String    @map("school_id")
  nisn         String?
  currentClass String?   @map("current_class")
  joinDate     DateTime  @default(now()) @map("join_date")
  leaveDate    DateTime? @map("leave_date")
  status       String    @default("ACTIVE")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  school       School    @relation(fields: [schoolId], references: [id])
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, schoolId])
  @@index([userId])
  @@index([schoolId])
  @@map("student_enrollments")
}

model ClubOrganization {
  id          String    @id @default(cuid())
  clubId      String    @map("club_id")
  userId      String?   @map("user_id")
  position    String
  customTitle String?   @map("custom_title")
  name        String
  whatsapp    String?
  email       String?
  termStart   DateTime? @map("term_start")
  termEnd     DateTime? @map("term_end")
  isActive    Boolean   @default(true) @map("is_active")
  sortOrder   Int       @default(0) @map("sort_order")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  club        Club      @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user        User?     @relation(fields: [userId], references: [id])

  @@index([clubId])
  @@index([userId])
  @@map("club_organizations")
}

model DailyLog {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  date            DateTime @default(now())
  rpe             Int
  durationMinutes Int      @map("duration_minutes")
  arrowCount      Int      @default(0) @map("arrow_count")
  sleepQuality    Int?     @map("sleep_quality")
  fatigueLevel    Int?     @map("fatigue_level")
  stressLevel     Int?     @map("stress_level")
  sorenessLevel   Int?     @map("soreness_level")
  notes           String?
  restingHR       Int?     @map("resting_hr")
  hrv             Int?
  vo2Max          Float?   @map("vo2_max")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("daily_logs")
}

model HistoryLog {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  logType     String   @map("log_type")
  fromId      String?  @map("from_id")
  fromName    String?  @map("from_name")
  fromCity    String?  @map("from_city")
  toId        String?  @map("to_id")
  toName      String?  @map("to_name")
  toCity      String?  @map("to_city")
  year        Int?
  level       String?
  achievement String?
  division    String?
  distance    String?
  eventName   String?  @map("event_name")
  status      String   @default("COMPLETED")
  notes       String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([logType])
  @@map("history_logs")
}

model ClubUnit {
  id        String             @id @default(cuid())
  clubId    String             @map("club_id")
  name      String
  type      String             @default("FIELD")
  address   String?
  schoolId  String?            @map("school_id")
  qrCode    String?            @map("qr_code")
  createdAt DateTime           @default(now()) @map("created_at")
  updatedAt DateTime           @updatedAt @map("updated_at")
  athletes  Athlete[]
  club      Club               @relation(fields: [clubId], references: [id], onDelete: Cascade)
  schedules TrainingSchedule[]

  @@unique([clubId, name])
  @@index([clubId])
  @@map("club_units")
}

model SidebarRoleConfig {
  id        String   @id @default(cuid())
  role      String   @unique
  groups    String
  updatedAt DateTime @updatedAt

  @@map("sidebar_role_configs")
}

model CustomModule {
  id           String             @id @default(cuid())
  coreId       String?            @unique @map("core_id")
  name         String
  description  String?
