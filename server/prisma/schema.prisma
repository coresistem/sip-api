  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@index([category])
  @@index([severity])
  @@map("troubleshoots")
}

model QCInspection {
  id          String        @id @default(cuid())
  orderId     String        @map("order_id")
  inspectorId String        @map("inspector_id")
  totalQty    Int           @default(1) @map("total_qty")
  passedQty   Int           @default(0) @map("passed_qty")
  rejectedQty Int           @default(0) @map("rejected_qty")
  status      String        @default("PENDING")
  result      String?
  notes       String?
  inspectedAt DateTime?     @map("inspected_at")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  order       JerseyOrder   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  rejections  QCRejection[]

  @@index([orderId])
  @@index([inspectorId])
  @@index([status])
  @@map("qc_inspections")
}

model QCRejection {
  id              String         @id @default(cuid())
  inspectionId    String         @map("inspection_id")
  quantity        Int            @default(1)
  defectType      String         @map("defect_type")
  description     String
  imageUrl        String?        @map("image_url")
  responsibleDept String         @map("responsible_dept")
  status          String         @default("PENDING")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")
  inspection      QCInspection   @relation(fields: [inspectionId], references: [id], onDelete: Cascade)
  repairRequest   RepairRequest?

  @@index([inspectionId])
  @@index([responsibleDept])
  @@index([status])
  @@map("qc_rejections")
}

model RepairRequest {
  id            String      @id @default(cuid())
  rejectionId   String      @unique @map("rejection_id")
  requestedById String      @map("requested_by")
  description   String
  estimatedCost Float       @map("estimated_cost")
  currency      String      @default("IDR")
  status        String      @default("PENDING")
  decidedById   String?     @map("decided_by")
  decidedAt     DateTime?   @map("decided_at")
  supplierNotes String?     @map("supplier_notes")
  actualCost    Float?      @map("actual_cost")
  repairedById  String?     @map("repaired_by")
  repairedAt    DateTime?   @map("repaired_at")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  rejection     QCRejection @relation(fields: [rejectionId], references: [id], onDelete: Cascade)

  @@index([status])
  @@map("repair_requests")
}

model CourierInfo {
  id                String      @id @default(cuid())
  orderId           String      @unique @map("order_id")
  courierName       String      @map("courier_name")
  awbNumber         String      @map("awb_number")
  trackingUrl       String?     @map("tracking_url")
  shippingCost      Float?      @map("shipping_cost")
  estimatedDelivery DateTime?   @map("estimated_delivery")
  shippedAt         DateTime?   @map("shipped_at")
  deliveredAt       DateTime?   @map("delivered_at")
  notes             String?
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")
  order             JerseyOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("courier_info")
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String?
  price       Float
  image       String?
  category    String      @default("All")
  stock       Int         @default(0)
  rating      Float       @default(5.0)
  isExclusive Boolean     @default(false) @map("is_exclusive")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  cartItems   CartItem[]
  orderItems  OrderItem[]

  @@map("products")
}

model Order {
  id            String      @id @default(cuid())
  orderNo       String      @unique @map("order_no")
  userId        String      @map("user_id")
  status        String      @default("PENDING")
  totalAmount   Float       @map("total_amount")
  paymentMethod String?     @map("payment_method")
  address       String?
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  items         OrderItem[]
  user          User        @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String  @map("order_id")
  productId String  @map("product_id")
  quantity  Int     @default(1)
  price     Float   @default(0)
  size      String?
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique @map("user_id")
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  items     CartItem[]
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("carts")
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String   @map("cart_id")
  productId String   @map("product_id")
  quantity  Int      @default(1)
  size      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  product   Product  @relation(fields: [productId], references: [id])
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@index([cartId])
  @@index([productId])
  @@map("cart_items")
}

model MarketplaceCategory {
  id          String                @id @default(cuid())
  name        String
  slug        String                @unique
  description String?
  icon        String?
  parentId    String?               @map("parent_id")
  createdAt   DateTime              @default(now()) @map("created_at")
  updatedAt   DateTime              @updatedAt @map("updated_at")
  parent      MarketplaceCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    MarketplaceCategory[] @relation("CategoryHierarchy")

  @@map("marketplace_categories")
}

model DashboardLayout {
  id           String   @id @default(cuid())
  userId       String?  @map("user_id")
  role         String?
  dashboardKey String   @map("dashboard_key")
  layoutData   String   @map("layout_data")
  isDefault    Boolean  @default(false) @map("is_default")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@unique([userId, dashboardKey])
  @@map("dashboard_layouts")
}

model LabFeature {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  status      String   @default("STANDALONE")
  isPublic    Boolean  @default(false) @map("is_public")
  sourcePath  String?  @map("source_path")
  routePath   String?  @map("route_path")
  metadata    String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("lab_features")
}
