{
    "name": "sip-server",
    "version": "0.0.1",
    "description": "Sistem Integrasi Panahan - Backend API",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "dev:local": "npx prisma generate --schema=prisma/schema.dev.prisma && tsx watch src/index.ts",
        "build": "npx prisma generate && tsc",
        "start": "node dist/src/index.js",
        "db:generate": "prisma generate",
        "db:generate:local": "prisma generate --schema=prisma/schema.dev.prisma",
        "db:push": "prisma db push",
        "db:push:local": "prisma db push --schema=prisma/schema.dev.prisma --accept-data-loss",
        "db:migrate": "prisma migrate dev",
        "db:seed": "tsx prisma/seed.ts",
        "db:setup:local": "npm run db:push:local && npm run db:seed",
        "db:studio": "prisma studio",
        "db:studio:local": "prisma studio --schema=prisma/schema.dev.prisma",
        "db:repair": "tsx prisma/repair_schema.ts",
        "test": "jest"
    },
    "dependencies": {
        "@prisma/client": "^5.8.1",
        "@supabase/supabase-js": "^2.91.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.0.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "pdfkit": "^0.15.0",
        "qrcode": "^1.5.3",
        "socket.io": "^4.7.4",
        "xlsx": "^0.18.5",
        "zod": "^4.3.5",
        "tsx": "^4.7.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.13",
        "@types/node": "^20.19.30",
        "@types/qrcode": "^1.5.5",
        "@types/supertest": "^6.0.3",
        "axios": "^1.13.2",
        "cross-env": "^10.1.0",
        "form-data": "^4.0.5",
        "jest": "^30.2.0",
        "prisma": "^5.8.1",
        "supertest": "^7.2.2",
        "ts-jest": "^29.4.6",
        "types-axios": "0.0.8",
        "typescript": "^5.3.3"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    }
}